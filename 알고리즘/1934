import java.util.*;

import java.io.*;
import java.math.*;

public class Main {
	public static void main(String[] args){
		Scanner sc=new Scanner(System.in);
		
		int n=sc.nextInt();
		int sum=0;
		for(int i=0;i<n;i++)
		{
			int a=sc.nextInt();
			int b=sc.nextInt();
			int j=a,k=b;
			while(true)
			{
				if(j==k)
				{
					sum=j;
					break;
				}	
				if(j<k) {
					j=j+a;
				}
				else if(j>k) {
					k=k+b;
				}
			}
			System.out.println(sum);
		}
		
		
		
	}
}
/* 5   8  */
