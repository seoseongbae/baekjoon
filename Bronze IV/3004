import java.util.*;
import java.io.*;
import java.math.*;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		int p = 1, b = 1;
		for (int i = 0; i < a; i++)
		{
			if(i%2!=0)
			{
				b+=1;
			}
			p+=b;
		}
		System.out.println(p);

	}

}
